{
  "scripts": {
    "clean": "rimraf .build/ src/routes/",
    "generate:swagger": "tsoa spec",
    "generate:routes": "tsoa routes",
    "copy:swagger": "cp src/swagger.html .build/swagger.html && cp src/swagger/swagger.json .build/swagger.json",
    "build": "npm run clean && npm run generate:swagger && npm run generate:routes && tsc && npm run copy:swagger",
    "start": "npm run build && serverless offline",
    "deploy": "npm run build && serverless deploy"
  },
  "dependencies": {
    "express": "^4.18.2",
    "serverless-http": "^3.2.0",
    "swagger-ui-dist": "^5.21.0",
    "swagger-ui-express": "^5.0.1",
    "tsoa": "^5.1.1"
  },
  "devDependencies": {
    "@types/aws-lambda": "^8.10.119",
    "@types/express": "^4.17.17",
    "@types/node": "^18.16.0",
    "@types/swagger-ui-dist": "^3.30.5",
    "@types/swagger-ui-express": "^4.1.8",
    "rimraf": "^5.0.0",
    "serverless": "^3.30.1",
    "serverless-offline": "^12.0.4",
    "serverless-plugin-typescript": "^2.1.4",
    "typescript": "^4.9.5"
  }
}
